{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "eslint": {
            "dependsOn": ["^eslint"]
        },
        "build": {
            "dependsOn": ["^build"]
        }
    },
    "release": {
        "projects": ["packages/*"],
        "releaseTagPattern": "v{version}",
        "version": {
            "conventionalCommits": true
        },
        "changelog": {
            "workspaceChangelog": {
                "createRelease": "github"
            }
        },
        "git": {
            "commitMessage": "chore(release): {version}"
        }
    },
    "defaultBase": "main"
}

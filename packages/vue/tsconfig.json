        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "preserve",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]

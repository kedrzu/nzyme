{
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kedrzu/nzyme.git"
    },
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "packageManager": "yarn@4.1.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "setup": "yarn && turbo run tsc:esm --filter=@nzyme/cli && yarn monorepo",
        "monorepo": "nzyme monorepo",
        "clean": "del \"**/tsconfig.*.dev.json\" \"**/dist\" \"**/.turbo\" \"**/.tsbuildinfo\" \"**/.tsbuildinfo.*\" \"!**/node_modules/**\"",
        "tsc:esm": "tsc --build tsconfig.esm.dev.json",
        "tsc:cjs": "tsc --build tsconfig.cjs.dev.json",
        "tsc": "tsc --build tsconfig.json",
        "build": "turbo run tsc:esm tsc:cjs",
        "watch": "yarn tsc:esm --watch",
        "watch:cjs": "yarn tsc:cjs --watch",
        "smoke": "turbo run smoke:cjs smoke:mjs",
        "release": "nx release --yes",
        "dev": "yarn && yarn monorepo && yarn watch",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "upgrade": "yarn upgrade-interactive"
    },
    "devDependencies": {
        "@nx/js": "^20.3.1",
        "@nzyme/cli": "*",
        "@swc-node/register": "^1.10.9",
        "@swc/core": "^1.10.7",
        "del-cli": "^6.0.0",
        "nx": "20.4.5",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "turbo": "^2.3.3",
        "typescript": "^5.7.3",
        "vitest": "^3.0.1"
    },
    "depcheck": {
        "ignoreDeps": [
            "*"
        ]
    },
    "dependencies": {
        "tslib": "^2.8.1"
    }
}

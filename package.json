{
    "repository": "https://github.com/kedrzu/nzyme.git",
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "monorepo": "node packages/project-tools/dist/monorepo.js",
        "build": "tsc --build",
        "watch": "tsc --build --watch",
        "publish": "auto shipit",
        "dev": "yarn && yarn monorepo && yarn watch",
        "upgrade": "yarn upgrade-interactive"
    },
    "devDependencies": {
        "@auto-it/conventional-commits": "^11.3.0",
        "@auto-it/npm": "^11.3.0",
        "@auto-it/released": "^11.3.0",
        "auto": "^11.3.0",
        "lerna": "^8.1.9",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "depcheck": {
        "ignoreDeps": [
            "*"
        ]
    },
    "auto": {
        "plugins": [
            "npm",
            "conventional-commits",
            "released"
        ]
    }
}

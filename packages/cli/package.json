{
    "name": "@nzyme/cli",
    "version": "1.0.0",
    "repository": "https://github.com/lesscms/lesscms.git",
    "author": "",
    "private": true,
    "type": "module",
    "bin": {
        "nzyme": "./bin/cli.js"
    },
    "scripts": {
        "prepack": "oclif-dev manifest && oclif-dev readme",
        "eslint": "eslint . --fix --cache"
    },
    "dependencies": {
        "@lerna/package": "^6.4.1",
        "@lerna/project": "^6.4.1",
        "@oclif/core": "^3.14.1",
        "@oclif/plugin-help": "^6.0.8",
        "@oclif/plugin-version": "^2.0.11",
        "@vue/compiler-sfc": "^3.4.3",
        "chalk": "^5.3.0",
        "comment-json": "^4.2.3",
        "compare-versions": "^6.1.0",
        "consola": "^3.2.3",
        "depcheck": "^1.4.7",
        "dotenv": "^16.3.1",
        "lodash.merge": "^4.6.2",
        "prettier": "^3.1.1",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/lerna__package": "^5.1.3",
        "@types/lerna__project": "^5.1.2",
        "@types/lodash.merge": "^4.6.9",
        "@types/node": "^20.10.6"
    },
    "files": [
        "/bin/cli.js",
        "/dist",
        "/oclif.manifest.json"
    ],
    "oclif": {
        "commands": "./dist/commands",
        "bin": "nzyme",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-version"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "depcheck": {
        "ignoreDeps": [
            "@oclif/plugin-*",
            "@vue/compiler-sfc"
        ]
    }
}

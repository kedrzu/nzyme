{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react",
        "jsxFactory": "h",
        "jsxImportSource": "vue",
        "jsxFragmentFactory": "h",
        "types": ["vite/client"],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json", "./src/**/*.scss"]
}

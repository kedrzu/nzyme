{
    "repository": "git+https://github.com/kedrzu/nzyme.git",
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "monorepo": "node packages/project-tools/dist/monorepo.js",
        "build": "tsc --build",
        "watch": "tsc --build --watch",
        "pkg:changeset": "changeset",
        "pkg:version": "changeset version",
        "pkg:publish": "changeset publish",
        "dev": "yarn && yarn monorepo && yarn watch",
        "upgrade": "yarn upgrade-interactive"
    },
    "dependencies": {
        "@changesets/cli": "^2.27.11",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2"
    },
    "depcheck": {
        "ignoreDeps": [
            "*"
        ]
    }
}

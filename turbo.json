{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "tsc:esm": {
            "cache": true,
            "outputs": ["dist/esm/**"],
            "dependsOn": ["^tsc:esm"]
        },
        "tsc:cjs": {
            "cache": true,
            "outputs": ["dist/cjs/**"],
            "dependsOn": ["^tsc:cjs"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "watch": {
            "cache": false,
            "persistent": true
        },
        "smoke:cjs": {
            "cache": false,
            "persistent": false
        },
        "smoke:mjs": {
            "cache": false,
            "persistent": false
        }
    },
    "ui": "stream"
}

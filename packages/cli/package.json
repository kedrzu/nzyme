{
    "name": "@nzyme/cli",
    "version": "1.0.0",
    "repository": "https://github.com/lesscms/lesscms.git",
    "author": "",
    "private": true,
    "type": "module",
    "bin": {
        "nzyme": "./bin/cli.js"
    },
    "scripts": {
        "prepack": "oclif-dev manifest && oclif-dev readme"
    },
    "dependencies": {
        "@lerna/package": "^6.4.1",
        "@lerna/project": "^6.4.1",
        "@oclif/core": "^2.8.5",
        "@oclif/plugin-help": "^5.2.9",
        "@oclif/plugin-version": "^1.3.4",
        "@vue/compiler-sfc": "^3.3.4",
        "chalk": "^5.2.0",
        "compare-versions": "^6.0.0-rc.1",
        "consola": "^3.1.0",
        "depcheck": "^1.4.3",
        "dotenv": "^16.1.4",
        "lodash.merge": "^4.6.2",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/lerna__package": "^5.1.0",
        "@types/lerna__project": "^5.1.0",
        "@types/lodash.merge": "^4.6.7",
        "ts-node": "^10.9.1"
    },
    "files": [
        "/bin/cli.js",
        "/src",
        "/oclif.manifest.json"
    ],
    "oclif": {
        "commands": "./src/commands",
        "bin": "nzyme",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-version"
        ]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "depcheck": {
        "ignoreDeps": [
            "@oclif/plugin-*",
            "@vue/compiler-sfc"
        ]
    }
}
